{% extends 'base.html.twig' %}

{% block title %}My Orders{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="profile-sidebar">
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                    </div>
                    <h5 class="mb-1">{{ app.user.fullName }}</h5>
                    <p class="text-muted mb-0">{{ app.user.email }}</p>
                </div>

                <hr>

                <nav class="nav flex-column">
                    <a class="nav-link" href="{{ path('profile_index') }}">
                        <i class="fas fa-user me-2"></i> My Profile
                    </a>
                    <a class="nav-link active" href="{{ path('profile_orders') }}">
                        <i class="fas fa-shopping-bag me-2"></i> My Orders
                    </a>
                    <a class="nav-link" href="{{ path('profile_edit') }}">
                        <i class="fas fa-edit me-2"></i> Edit Profile
                    </a>
                    <a class="nav-link text-danger" href="{{ path('app_logout') }}">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                </nav>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">My Orders</h5>
                </div>
                <div class="card-body">
                    {% if orders|length > 0 %}
                        {% for order in orders %}
                            <div class="card order-card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="fw-bold">Order #{{ order.id }}</span>
                                        <span class="text-muted ms-3">{{ order.createdAt|date('M d, Y') }}</span>
                                    </div>
                                    <div>
                                        <span class="badge badge-status-{{ order.status }}">{{ order.status|capitalize }}</span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="mb-3">
                                                <h6 class="mb-2">Items:</h6>
                                                <ul class="list-unstyled">
                                                    {% for item in order.items %}
                                                        <li>{{ item.quantity }}x {{ item.product.name }} - ${{ item.total|number_format(2) }}</li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="text-end">
                                                <p class="mb-1"><strong>Subtotal:</strong> ${{ order.total|number_format(2) }}</p>
                                                <p class="mb-1"><strong>Tax:</strong> ${{ (order.total * 0.1)|number_format(2) }}</p>
                                                <p class="mb-1"><strong>Total:</strong> ${{ (order.total + (order.total * 0.1))|number_format(2) }}</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <a href="{{ path('profile_order_show', {'id': order.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i> View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                            <h5>You haven't placed any orders yet</h5>
                            <p class="text-muted">Start shopping to see your orders here.</p>
                            <a href="{{ path('product_index') }}" class="btn btn-primary mt-2">
                                <i class="fas fa-shopping-bag me-2"></i> Browse Products
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}